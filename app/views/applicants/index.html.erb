<%= form_with url: applicants_path, method: :post do |f| %>
  <div class="form-row">
   <h4>Add New Talent</h2>
  </div>

  <div class="form-row d-flex">
    <div class="form-group col-4 p-1">
      <%= f.text_field :name,
                       autocomplete: :off,
                       autofocus: true,
                       class: 'form-control',
                       placeholder: 'Name' %>
    </div>

    <div class="form-group col-7 p-1">
      <%= f.text_field :tags,
                       autocomplete: :off,
                       class: 'form-control',
                       placeholder: 'Tags (ex. node developer, react developer, senior level, etc)' %>
    </div>

    <div class="form-group col-1 p-1">
      <%= f.submit 'Add', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<hr>

<h4>Talents</h2>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Rating</th>
  </tr>
  </thead>
  <tbody>
  <% @applicants.each do |applicant| %>
  <tr>
    <th scope="row"><%= link_to applicant.name&.truncate(20), root_path %></th>
    <td><%= applicant.rating %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<% if @applicants.blank? %>
  <div>
    You have no applicants yet
  </div>
<% end %>

<%= paginate @applicants %>
